{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/server.ts", "src/database.ts", "src/types.ts"],
  "exclude": ["node_modules", "src/dynamodb.ts", "src/routes/**/*", "src/server.complex.ts", "src/types.complex.ts"]
}
